const { gql } = require ( 'apollo-server-express'); 
 
const bookTypeDefs = gql `
    type Book: { 
        bookId: String!
        title: String!
        authors: [String]! 
        decription: String! 
        image: String! 
        link: String! 
    }

    extend type Query { 
       getBookById(bookId: String!): Book
    }

    extend type Mutation { 
       addBook(book: bookInput!): Book
    }
        input bookInput { 
            bookId:  String!
            authors: [ String!]
            description:  String!
            title:  String!
            image:  String!
            link:  String!
        }

`; 

module.exports = bookTypeDefs; 